@using SP1.Chalao.Entities
@model SP1.Chalao.Framework.Objects.Result<List<SP1.Chalao.Entities.Book_Info>>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

<h2> Booking Info </h2>

<div class="row">
    <div class="col-md-8">
        <input type="text" placeholder="search" id="searchText" value="@Request.Params["key"]" />
        <a onclick="SearchUrl('@Url.Action("List","BookInfo")')" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-search">Search</span></a>
        <a href="@Url.Action("Edit","BookInfo", new {id=-1})" class="btn btn-sm btn-success"><span class="glyphicon glyphicon-plus">Add</span></a>
    </div>

    @if (SP1.Chalao.Framework.Helper.ValidationHelper.IsValidString(ViewBag.Error))
    {
        <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dissmiss="alert"><span aria-hidden="true"></span></button>
            <strong>Error!</strong> @Model.Message
        </div>
    }

    else

    {
        <table class="table table-striped table-hover">
            <tr>
                <th>ID</th>
                <th>Rider Name</th>
                <th>Rider Email</th>
                <th>Book Schedule</th>
                <th>Action</th>
            </tr>
            @foreach (var book in Model.Data)
            {
                <tr>
                    <td>@book.ID</td>
                    <td>@book.Rider_Name</td>
                    <td>@book.Rider_Email</td>
                    <td>@book.Book_Schedule</td>
                    <td>
                        <a onclick="DeleteUrl('@Url.Action("Delete","BookInfo", new {id = book.ID})')" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-remove">Delete</span></a>
                    </td>
                </tr>
            }
        </table>
    }

</div>


@section Scripts
{
    <script>

        function SearchUrl(url) {
            window.location.href = url + "?key=" + $('#searchText').val();
        }

        function DeleteUrl(url) {
            if (confirm("Are You Sure?"))
                window.location.href = url;
        }

    </script>
}
