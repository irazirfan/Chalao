@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>CHALAO</h1>
    <p class="lead">Chalao is cycle renting web application which make your journey much comfortable than it was before.</p>
</div>


<div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img style="height: 500px; width: 100%" src="~/Content/images/1.jpg" alt="1st Image">
            </div>

            <div class="item">
                <img style="height: 500px; width: 100%" src="~/Content/images/2.jpg" alt="2nd Image">
            </div>

            <div class="item">
                <img style="height: 500px; width: 100%" src="~/Content/images/3.jpg" alt="2nd Image">
            </div>

            <div class="item">
                <img style="height: 500px; width: 100%" src="~/Content/images/5.jpg" alt="2nd Image">
            </div>

            <div class="item">
                <img style="height: 500px; width: 100%" src="~/Content/images/6.jpg" alt="2nd Image">
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Sign Up Today for exciting offers
        </p>
        <p><a class="btn btn-default" href="../Account/Registration.cshtml">Sign up &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Info</h2>
        <p>Start Today to get first 1 hour free ride</p>
        <p><a class="btn btn-default" href="About.cshtml.">About Us &raquo;</a></p>

    </div>
    <div class="col-md-4">
        <h2>Any Query ??</h2>
        <p>Contact Us Anytime</p>
        <p><a class="btn btn-default" href="Contact.cshtml.">Contact Us &raquo;</a></p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="embed-responsive embed-responsive-16by9" align="center">
            <iframe class="embed-responsive-item" width="600" height="500" src="https://www.youtube.com/embed/aA5671R_gKU?rel=0" allowfullscreen></iframe>
        </div>
    </div>

</div>



@section scripts
{
    <script>

        $(document).ready(function () {

            $('.menu').removeClass('active');
            $('#homeMenu').addClass('active');
            $('.carousel').carousel({
                interval: 2800
            });

        });

    </script>
}